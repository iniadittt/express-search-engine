<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../assets/css/style.css" rel="stylesheet">
</head>

<body class="bg-gray-200 bg-opacity-50">
    <div class="w-screen fixed flex py-2 px-4 shadow-md bg-white">
        <a href="/">
            <div class="text-center text-2xl font-semibold font-sans flex justify-center mr-3 lg:mx-10 md:mx-5">
                <span class="text-[#4787FF]">M</span>
                <span class="text-[#F43D2C]">y</span>
                <span class="text-[#FEB808]">s</span>
                <span class="text-[#4682F6]">e</span>
                <span class="text-[#4682F6]">a</span>
                <span class="text-[#4682F6]">r</span>
                <span class="text-[#35AB53]">c</span>
                <span class="text-[#E5412B]">h</span>
            </div>
        </a>
        <div class="w-full lg:w-2/5 md:w-3/5">
            <form action="/search" method="post">
                <div class="text-center flex justify-center">
                    <input type="text" name="textSearch" id="textSearch" placeholder="Search Anything or Type a URL" class="w-full px-5 bg-gray-100 bg-opacity-60 rounded-tl-full rounded-bl-full focus:outline-none focus:border-blue-400 focus:ring-2 focus:ring-[#4787FF] focus:ring-opacity-80 text-sm placeholder-slate-400 text-slate-600">
                    <button class="p-2 bg-gray-100 bg-opacity-60 rounded-tr-full rounded-br-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
                </div>
            </form>
        </div>
    </div>

    <div class="pt-14"></div>

    <% dataSearch.forEach((data) => { %>
        <div class="my-2 p-4 bg-white lg:mx-48 lg:py-6 lg:px-8 md:mx-40 md:py-4 md:px-6">
            <p class="text-xs mb-2 w-full overflow-hidden whitespace-nowrap overflow-ellipsis">
                <%= data.link %>
            </p>
            <p class="text-blue-900 font-semibold mb-2">
                <a href="<%= data.link %>">
                    <%= data.title %>
                </a>
            </p>
            <p class="text-sm">
                <%= data.snippet %>
            </p>
        </div>
        <% }) %>

</body>

</html>